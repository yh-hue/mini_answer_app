/* pages/single/index.wxss */
page {
  display: flex;
  justify-content: center;
  width: 100%;
  height: 100%;
}
.background {
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
}
.single {
  width: 95%;
  height: 90%;
  margin-top: 30px;
  padding: 20px;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 10px;
}
.single .statistics .text {
  display: flex;
  justify-content: space-between;
}
.single .statistics .text text {
  color: var(--themeColor);
}
.single .statistics progress {
  margin: 10px 0;
}
.single .timu .tigan {
  font-size: 18px;
  margin-bottom: 20px;
}
.single .timu .choice {
  display: flex;
  margin-bottom: 20px;
}
.single .tool {
  width: 100%;
  padding: 10px 40px;
  position: fixed;
  bottom: 24%;
  right: -10%;
}
.single .tool .Comm {
  width: 80%;
  height: 30px;
  color: #fff;
  border-radius: 10px;
  text-align: center;
  line-height: 30px;
  background-color: #1296db;
}
.single .mask_warp {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 3;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
}
.single .mask {
  position: absolute;
  width: 250px;
  height: 350px;
  z-index: 2;
  top: 36%;
  left: 50%;
  margin-top: -150px;
  margin-left: -125px;
  background-color: #fff;
  border-radius: 20px;
}
.single .mask .title {
  height: 120px;
  width: 100%;
  background-color: var(--themeColor);
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
  text-align: center;
  line-height: 150px;
  font-size: 26px;
  color: #fff;
  font-weight: 800;
}
.single .mask .content {
  padding: 10px 10px;
  text-align: center;
  color: #333;
}
.single .mask .content text {
  color: var(--themeColor);
}
.single .mask .btn {
  width: 100px;
  height: 30px;
  margin: 15px auto;
  border-radius: 5px;
  background-color: #00b23b;
  color: #fff;
  text-align: center;
  line-height: 30px;
}
